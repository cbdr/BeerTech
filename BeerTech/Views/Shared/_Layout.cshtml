<!DOCTYPE html>

<html ng-app>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BeerTech: @ViewBag.Title</title>
    @Styles.Render("~/bundles/mainstyles")
    @RenderSection("Styles", false)
</head>
<body ng-controller="UserCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">BeerTech</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
              <li@(ViewBag.Title=="Welcome!" ? " class='active'" : "")><a href="/">Home</a></li>
              <li@(ViewBag.Title=="Requests" ? " class='active'" : "")><a href="/BeverageRequest">Requests</a></li>
              <li@(ViewBag.Title=="Contact People" ? " class='active'" : "")><a href="/Home/Contact">Contact</a></li>
          </ul>
          <form class="navbar-form navbar-right" role="form" ng-hide="signedin">
            <div class="form-group">
              <input type="text" placeholder="Email" class="form-control" ng-model="email" required>
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control" ng-model="password" required>
            </div>
            <button type="submit" class="btn btn-success" ng-click="SignIn()">Sign in</button>
            <button type="submit" class="btn btn-info" ng-click="SignUp()">Sign up</button>
          </form>
          <p class="navbar-text navbar-right" ng-show="signedin">Signed in as {{username}} <button type="submit" class="btn btn-danger" ng-click="SignOut()">Sign out</button></p>
        </div>
      </div>
    </div>
    <div class="jumbotron">
      <div class="container well">
        <h1>@ViewBag.Title</h1>
        <p>@ViewBag.PageDescription</p>
      </div>
    </div>
    <div class="container">
      @RenderBody()
      <hr>
      <footer>
        <p>&copy; CB Hackathon 2013</p>
      </footer>
    </div>
    @Scripts.Render("~/bundles/mainscripts")
    @Scripts.Render("~/Scripts/ngapps/user.js")
    @RenderSection("Scripts", false)
</body>
</html>
